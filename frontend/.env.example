# Frontend Environment Variables Template
# Copy this file to .env.local and fill in with actual values
# IMPORTANT: .env.local should NEVER be committed to git

# API Configuration
# Set this to your backend API URL
# Local: http://localhost:8000
# Production: https://usmankhan0016-taskflow-backend.hf.space
NEXT_PUBLIC_API_URL=http://localhost:8000

# Environment Mode
# Set to "production" for production deployment
NEXT_PUBLIC_ENV=development

# Debug and Logging (disable in production)
# Set to "false" for production
NEXT_PUBLIC_ENABLE_DEBUG_MODE=false
NEXT_PUBLIC_ENABLE_LOGGING=false

# Authentication
# This should match the BETTER_AUTH_SECRET from backend
# IMPORTANT: This value should be provided securely via environment variables, not hardcoded
NEXT_PUBLIC_APP_NAME=TaskFlow
