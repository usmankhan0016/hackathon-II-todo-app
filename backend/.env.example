# Backend Environment Variables Template
# Copy this file to .env and fill in with actual values
# IMPORTANT: .env should NEVER be committed to git

# Environment Configuration
# Set to "production", "staging", or "development"
ENVIRONMENT=development

# Debug Mode
# Set to False in production
DEBUG=False

# Logging Level
# Set to "ERROR" or "WARNING" in production, "DEBUG" or "INFO" in development
LOG_LEVEL=INFO

# Database Configuration
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database?sslmode=require
DATABASE_URL=postgresql://user:password@localhost:5432/todo_app_dev

# Authentication Secret
# IMPORTANT: Generate a secure random string of at least 32 characters
# Use: python -c "import secrets; print(secrets.token_urlsafe(32))"
BETTER_AUTH_SECRET=your-secure-random-string-here-minimum-32-characters

# CORS Configuration
# Frontend domain(s) allowed to access this API
# For production, set to your actual frontend domain
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Server Configuration
# Port to run the API server on
API_PORT=8000

# API Title
API_TITLE=TaskFlow API - Professional Task Management

# API Version
API_VERSION=1.0.0
